<div class="container">
  <div class="row">
    <div class="col-sm-8 shorten">
      <img src="/image/link.png" alt="">
      <form action="/" method="POST">
        <input type="text" name="url" id="url" placeholder="Input URL here">
        <button type="submit">Shorten</button>
      </form>
    </div>
    <div class="col-sm-4">col-sm-4</div>
  </div>



  {{#if exist}}
  <div>
    <p>This URL exists.</p>
  </div>
  {{/if}}

  {{#if shortenURL}}
  <div>
    <p>Here's your shorten URL: teenyurl/{{ shortenURL }}</p>
  </div>
  {{/if}}

</div>